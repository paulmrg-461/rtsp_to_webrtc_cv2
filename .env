# Aplicación
APP_NAME=RTSP to WebRTC API
APP_VERSION=1.0.0
ENVIRONMENT=development

# Servidor
APP_HOST=0.0.0.0
APP_PORT=8990

# Detección de Movimiento
MOTION_THRESHOLD=25
MOTION_MIN_AREA=500
MOTION_BLUR_SIZE=21

# Video
VIDEO_WIDTH=640
VIDEO_HEIGHT=480
VIDEO_FPS=30

# GPU
USE_GPU=false
GPU_DEVICE_ID=0

# Directorios
STORAGE_PATH=./storage
LOGS_PATH=./logs

# Seguridad
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_ORIGINS=["*"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Socket.IO
SOCKETIO_ASYNC_MODE=asgi
SOCKETIO_CORS_ORIGINS=["*"]

# WebRTC
WEBRTC_ICE_SERVERS=["stun:stun.l.google.com:19302"]